<h1>User:</h1>

<ul>

  <li>
    <strong>Email:</strong>
    <%= @user.email %>
  </li>
  <li>
    <%= link "User's Tasks", to: "/tasks/personal?user_id=#{@user.id}" %>
  </li>
  <li>
    <%= link "Edit", to: Routes.user_path(@conn, :edit, @user) %>
  </li>
  <li>
    <span><%= link "Back", to: Routes.user_path(@conn, :index) %></span>
  </li>
</ul>

<%= if @user.is_manager do
  render TasksWeb.UserView, "manager_section.html", user: @user, conn: @conn
end %>
